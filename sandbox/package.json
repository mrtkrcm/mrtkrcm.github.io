{
  "name": "mch-cms-fe",
  "version": "0.0.1",
  "keywords": [],
  "description": "MCH CMS FE",
  "author": "Pedro MagalhÃ£es, Murat Karacam, Josep Dominguez",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "src/*",
    "src/tools/eslint-config-dmi"
  ],
  "engines": {
    "node": ">=10.15"
  },
  "scripts": {
    "dev": "yarn clean:all && yarn install && cross-env NODE_ENV=development yarn nodemon:go",
    "build": "yarn lint:js && yarn clean:all && yarn build:app",
    "build:job": "yarn clean:all && yarn build:app",
    "build:app": "cross-env NODE_ENV=production environment=build yarn --cwd src/app next build",
    "build:debug": "yarn clean:all && yarn install --check-files && cross-env x_app_debug=true yarn build:job",
    "start": "cross-env NODE_ENV=production yarn node:go:debug -p 3001 src/app",
    "start:debug": "cross-env NODE_ENV=production DEBUG=*,-nodemon:watch*,-eslint*,-babel* yarn node:go:debug",
    "nodemon:go": "nodemon src/server",
    "node:go": "node src/server",
    "node:go:debug": "cross-env x_app_debug=true node src/server",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "./node_modules/.bin/eslint src/app -c ./src/app/.eslintrc.js --fix --format=codeframe",
    "lint:style": "stylelint src",
    "precommit": "lint-staged",
    "clean:all": "yarn clean:babel_cache && yarn clean:npm_cache && yarn clean:next_cache",
    "clean:npm_cache": "rimraf node_modules/.cache",
    "clean:babel_cache": "rimraf node_modules/.cache/babel-loader",
    "clean:next_cache": "rimraf src/app/.next"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{css,scss}": [
        "prettier",
        "git add"
      ],
      "*.{js,jsx}": [
        "./node_modules/.bin/eslint src/app -c ./src/app/.eslintrc.js --fix --format=codeframe",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "lerna": "^3.4.3"
  },
  "dependencies": {}
}
